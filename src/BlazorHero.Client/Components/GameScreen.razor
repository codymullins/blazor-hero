@inject GameEngine Engine
@inject GameState State
@implements IAsyncDisposable

<div class="game-screen">
    <div class="game-container">
        <BECanvas @ref="_canvasRef" Width="@_width" Height="@_height"></BECanvas>
    </div>

    <div class="hud">
        <div class="hud-left">
            <div class="score-display">
                <span class="score-label">SCORE</span>
                <span class="score-value">@Engine.Score.ToString("N0")</span>
            </div>
        </div>

        <div class="hud-center">
            @if (Engine.CurrentSongMeta != null)
            {
                <div class="song-info">
                    <span class="song-title">@Engine.CurrentSongMeta.Title</span>
                    <span class="song-artist">@Engine.CurrentSongMeta.Artist</span>
                </div>
            }
        </div>

        <div class="hud-right">
            <div class="combo-display @(Engine.Combo >= 10 ? "hot" : "") @(Engine.IsStarPowerActive ? "protected" : "")">
                <span class="combo-value">@Engine.Combo</span>
                <span class="combo-label">COMBO @(Engine.IsStarPowerActive ? "(SHIELDED)" : "")</span>
            </div>
            <div class="multiplier-display @(Engine.IsStarPowerActive ? "star-boosted" : "")">
                <span class="multiplier-value">@Engine.Multiplier</span>
                <span class="multiplier-x">X</span>
            </div>
        </div>
    </div>

    <div class="star-power-container @(Engine.IsStarPowerActive ? "active" : "")">
        <div class="star-power-bar">
            <div class="star-power-fill @(Engine.IsStarPowerActive ? "active" : "")"
                 style="width: @(Engine.StarPowerMeter * 100)%"></div>
        </div>
        @if (Engine.IsStarPowerActive)
        {
            <span class="star-power-active-label">2X MULTIPLIER + COMBO SHIELD</span>
        }
        else if (Engine.StarPowerMeter >= 0.5)
        {
            <span class="star-power-ready">PRESS SPACE!</span>
        }
    </div>

    @if (State.Current == GameStateType.Paused)
    {
        <div class="pause-menu">
            <h2>PAUSED</h2>
            <div class="pause-options">
                <button @onclick="ResumeGame">Resume</button>
                <button @onclick="RestartGame">Restart</button>
                <button @onclick="QuitGame">Quit</button>
            </div>
        </div>
    }
</div>

<style>
    .game-screen {
        width: 100%;
        height: 100vh;
        background: #0a0a0f;
        position: relative;
        overflow: hidden;
    }

    .game-container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .game-container canvas {
        max-width: 100%;
        max-height: 100%;
    }

    .hud {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-between;
        padding: 1rem 2rem;
        pointer-events: none;
    }

    .hud-left, .hud-right {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .hud-center {
        text-align: center;
    }

    .score-display {
        display: flex;
        flex-direction: column;
    }

    .score-label {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.8rem;
        letter-spacing: 0.1em;
    }

    .score-value {
        color: white;
        font-size: 2rem;
        font-weight: bold;
    }

    .song-info {
        display: flex;
        flex-direction: column;
    }

    .song-title {
        color: white;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .song-artist {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
    }

    .combo-display {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        transition: all 0.1s;
    }

    .combo-display.hot .combo-value {
        color: #FFD700;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
    }

    .combo-value {
        color: white;
        font-size: 2.5rem;
        font-weight: bold;
        line-height: 1;
    }

    .combo-label {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.7rem;
        letter-spacing: 0.1em;
    }

    .multiplier-display {
        display: flex;
        align-items: baseline;
        justify-content: flex-end;
        gap: 0.2rem;
    }

    .multiplier-value {
        color: #FFD700;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .multiplier-x {
        color: rgba(255, 215, 0, 0.7);
        font-size: 1rem;
    }

    .star-power-container {
        position: absolute;
        bottom: 1rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .star-power-bar {
        width: 200px;
        height: 12px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 6px;
        overflow: hidden;
    }

    .star-power-fill {
        height: 100%;
        background: linear-gradient(90deg, #3B82F6 0%, #60A5FA 100%);
        transition: width 0.1s;
    }

    .star-power-fill.active {
        background: linear-gradient(90deg, #60A5FA 0%, #93C5FD 50%, #60A5FA 100%);
        background-size: 200% 100%;
        animation: shimmer 1s linear infinite;
    }

    .star-power-ready {
        color: #60A5FA;
        font-size: 0.8rem;
        font-weight: bold;
        animation: pulse 0.5s ease-in-out infinite alternate;
    }

    .star-power-active-label {
        color: #93C5FD;
        font-size: 0.75rem;
        font-weight: bold;
        text-shadow: 0 0 10px rgba(96, 165, 250, 0.8);
        animation: glow 0.5s ease-in-out infinite alternate;
    }

    .star-power-container.active {
        filter: drop-shadow(0 0 15px rgba(96, 165, 250, 0.6));
    }

    .combo-display.protected .combo-value {
        color: #60A5FA;
        text-shadow: 0 0 15px rgba(96, 165, 250, 0.8);
    }

    .combo-display.protected .combo-label {
        color: #60A5FA;
    }

    .multiplier-display.star-boosted .multiplier-value {
        color: #60A5FA;
        text-shadow: 0 0 15px rgba(96, 165, 250, 0.8);
        animation: glow 0.3s ease-in-out infinite alternate;
    }

    .multiplier-display.star-boosted .multiplier-x {
        color: #93C5FD;
    }

    .pause-menu {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
    }

    .pause-menu h2 {
        color: white;
        font-size: 3rem;
        margin: 0;
    }

    .pause-options {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .pause-options button {
        padding: 1rem 3rem;
        font-size: 1.2rem;
        font-weight: bold;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .pause-options button:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: white;
    }

    @@keyframes shimmer {
        0% { background-position: -200% 0; }
        100% { background-position: 200% 0; }
    }

    @@keyframes pulse {
        from { opacity: 0.7; }
        to { opacity: 1; }
    }

    @@keyframes glow {
        from { text-shadow: 0 0 10px rgba(96, 165, 250, 0.5); }
        to { text-shadow: 0 0 20px rgba(96, 165, 250, 1); }
    }
</style>

@code {
    private BECanvasComponent? _canvasRef;
    private Canvas2DContext? _ctx;

    private long _width = 1280;
    private long _height = 720;
    private bool _isInitialized;

    protected override void OnInitialized()
    {
        // Subscribe to engine state changes to update HUD
        Engine.StateChanged += OnEngineStateChanged;
    }

    private void OnEngineStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _canvasRef != null)
        {
            _ctx = await _canvasRef.CreateCanvas2DAsync();

            // Bind the new canvas context to the engine (synchronous, no lock)
            Engine.BindCanvas(_ctx, _width, _height);

            // Start game loop (engine handles idempotency)
            await Engine.StartGameLoopAsync();

            _isInitialized = true;
        }
    }

    private async Task ResumeGame()
    {
        await Engine.ResumeGame();
    }

    private async Task RestartGame()
    {
        await Engine.RestartSong();
    }

    private async Task QuitGame()
    {
        await Engine.QuitToMenu();
    }

    public async ValueTask DisposeAsync()
    {
        // Unsubscribe from events
        Engine.StateChanged -= OnEngineStateChanged;

        if (_isInitialized)
        {
            // Stop the game loop but DON'T dispose the engine (it's a singleton)
            await Engine.StopGameLoopAsync();

            // Unbind canvas (it's being destroyed with this component)
            Engine.UnbindCanvas();

            _isInitialized = false;
        }

        // DO NOT call Engine.DisposeAsync() - singleton persists across navigations!
    }
}
