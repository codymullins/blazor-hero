@code {
    [Parameter]
    public EventCallback<(string ChartFile, Difficulty Difficulty)> OnSongSelected { get; set; }

    [Parameter]
    public EventCallback OnBack { get; set; }

    private List<SongInfo> _songs = new();
    private SongInfo? _selectedSong;
    private Difficulty _selectedDifficulty = Difficulty.Easy;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        _songs = await Charts.GetSongListAsync();
        _isLoading = false;
        
        // Auto-select first song for keyboard navigation
        if (_songs.Count > 0)
        {
            await SelectSong(_songs[0]);
        }
    }

    private List<Difficulty> GetFilteredDifficulties()
    {
        if (_selectedSong == null) return new List<Difficulty>();

        var difficulties = _selectedSong.AvailableDifficulties;
        
        // On mobile, filter out Expert (5 lanes)
        if (Device.IsMobile)
        {
            difficulties = difficulties.Where(d => d != Difficulty.Expert).ToList();
        }

        return difficulties;
    }

    private int GetLaneCount(Difficulty difficulty)
    {
        return difficulty switch
        {
            Difficulty.VeryEasy => 2,
            Difficulty.Easy => 3,
            Difficulty.Medium => 4,
            Difficulty.Hard => 4,
            Difficulty.Expert => 5,
            _ => 4
        };
    }

    private async Task SelectSong(SongInfo song)
    {
        _selectedSong = song;
        
        // Auto-select first available difficulty (respecting mobile filter)
        var availableDifficulties = GetFilteredDifficulties();
        if (availableDifficulties.Count > 0)
        {
            _selectedDifficulty = availableDifficulties[0];
        }

        // Play preview (if audio is ready)
        try
        {
            await Audio.LoadSongAsync(song.Meta.AudioFile);
            await Audio.EnsureAudioResumedAsync();
            await Audio.PlaySongAsync(song.Meta.PreviewStart);
        }
        catch
        {
            // Ignore audio errors during preview
        }
    }

    private void SelectDifficulty(Difficulty difficulty)
    {
        _selectedDifficulty = difficulty;
    }

    private int GetNoteCount(Difficulty difficulty)
    {
        // Note count is stored in SongInfo
        return _selectedSong?.GetNoteCount(difficulty) ?? 0;
    }

    private async Task ConfirmSelection()
    {
        if (_selectedSong != null)
        {
            await Audio.StopSongAsync();
            await OnSongSelected.InvokeAsync((_selectedSong.ChartFile, _selectedDifficulty));
        }
    }

    private async Task OnBackClick()
    {
        await Audio.StopSongAsync();
        await OnBack.InvokeAsync();
    }

    public async Task HandleKeyAsync(string key)
    {
        if (_songs.Count == 0) return;

        int currentIndex = _selectedSong != null ? _songs.IndexOf(_selectedSong) : -1;

        switch (key)
        {
            case "up":
                if (currentIndex > 0)
                {
                    await SelectSong(_songs[currentIndex - 1]);
                }
                else if (currentIndex == -1 && _songs.Count > 0)
                {
                    await SelectSong(_songs[0]);
                }
                StateHasChanged();
                break;

            case "down":
                if (currentIndex < _songs.Count - 1)
                {
                    await SelectSong(_songs[currentIndex + 1]);
                }
                else if (currentIndex == -1 && _songs.Count > 0)
                {
                    await SelectSong(_songs[0]);
                }
                StateHasChanged();
                break;

            case "left":
                if (_selectedSong != null)
                {
                    var diffs = GetFilteredDifficulties();
                    int diffIndex = diffs.IndexOf(_selectedDifficulty);
                    if (diffIndex > 0)
                    {
                        _selectedDifficulty = diffs[diffIndex - 1];
                        StateHasChanged();
                    }
                }
                break;

            case "right":
                if (_selectedSong != null)
                {
                    var diffs = GetFilteredDifficulties();
                    int diffIndex = diffs.IndexOf(_selectedDifficulty);
                    if (diffIndex < diffs.Count - 1)
                    {
                        _selectedDifficulty = diffs[diffIndex + 1];
                        StateHasChanged();
                    }
                }
                break;

            case "confirm":
                if (_selectedSong != null)
                {
                    await ConfirmSelection();
                }
                else if (_songs.Count > 0)
                {
                    await SelectSong(_songs[0]);
                }
                break;
        }
    }
}
