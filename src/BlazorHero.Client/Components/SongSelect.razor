@inject ChartService Charts
@inject AudioService Audio
@inject DeviceService Device

<div class="song-select @(Device.IsMobile ? "mobile" : "")">
    <header class="screen-header">
        <button class="back-btn" @onclick="OnBackClick">
            @if (!Device.IsMobile)
            {
                <span class="key-hint">ESC</span>
            }
            <span>Back</span>
        </button>
        <h2>SELECT A SONG</h2>
        @if (!Device.IsMobile)
        {
            <div class="nav-hint">
                <span class="key">@('\u2191')</span><span class="key">@('\u2193')</span> Navigate
                <span class="key">@('\u2190')</span><span class="key">@('\u2192')</span> Difficulty
                <span class="key">ENTER</span> Play
            </div>
        }
        else
        {
            <div class="spacer"></div>
        }
    </header>

    <div class="main-content">
        <div class="song-list">
            @if (_isLoading)
            {
                <div class="loading">Loading songs...</div>
            }
            else if (_songs.Count == 0)
            {
                <div class="no-songs">
                    <p>No songs found!</p>
                    <p class="hint">Add chart files to wwwroot/charts/</p>
                </div>
            }
            else
            {
                @foreach (var song in _songs)
                {
                    <div class="song-card @(_selectedSong == song ? "selected" : "")"
                         @onclick="() => SelectSong(song)">
                        <div class="song-cover">
                            @if (!string.IsNullOrEmpty(song.Meta.CoverImage))
                            {
                                <img src="@song.Meta.CoverImage" alt="@song.Meta.Title" />
                            }
                            else
                            {
                                <div class="cover-placeholder">&#9835;</div>
                            }
                        </div>
                        <div class="song-info">
                            <h3 class="song-title">@song.Meta.Title</h3>
                            <p class="song-artist">@song.Meta.Artist</p>
                            <div class="song-meta">
                                <span class="bpm">@song.Meta.Bpm BPM</span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        @if (_selectedSong != null)
        {
            <div class="difficulty-panel">
                <div class="panel-header">
                    <h3>@_selectedSong.Meta.Title</h3>
                    <p>@_selectedSong.Meta.Artist</p>
                </div>
                
                <div class="difficulty-options">
                    @foreach (var diff in GetFilteredDifficulties())
                    {
                        <button class="diff-btn @diff.ToString().ToLower() @(_selectedDifficulty == diff ? "selected" : "")"
                                @onclick="() => SelectDifficulty(diff)">
                            <span class="diff-name">@diff</span>
                            <span class="diff-info">
                                <span class="diff-notes">@GetNoteCount(diff) notes</span>
                                <span class="diff-lanes">@GetLaneCount(diff) lanes</span>
                            </span>
                        </button>
                    }
                </div>

                <button class="play-btn" @onclick="ConfirmSelection">
                    PLAY
                    @if (!Device.IsMobile)
                    {
                        <span class="key-hint">ENTER</span>
                    }
                </button>
            </div>
        }
    </div>
</div>

