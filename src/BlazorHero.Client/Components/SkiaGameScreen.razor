@code {
    private SKCanvasView? _canvasRef;
    private bool _isInitialized;
    private double _lastRenderTime;
    private bool _isMobile;
    private bool _loggedFirstRender;

    // Canvas dimensions - set dynamically on first render
    private double _canvasWidth = 1280;
    private double _canvasHeight = 720;

    // Lane boundaries for touch detection (X positions)
    private double[] _laneBoundaries = Array.Empty<double>();

    protected override void OnInitialized()
    {
        _isMobile = Device.IsInitialized && Device.IsMobile;

        Engine.StateChanged += OnEngineStateChanged;
        Engine.RenderRequested += OnRenderRequested;
    }

    private void OnEngineStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void OnRenderRequested()
    {
        _canvasRef?.Invalidate();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Re-check mobile state now that Device should be initialized
            _isMobile = Device.IsInitialized && Device.IsMobile;

            // Initialize touch input on mobile
            if (_isMobile)
            {
                try
                {
                    await Input.InitializeTouchAsync();
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"[SkiaGameScreen] Touch init failed: {ex.Message}");
                }
            }

            // Set canvas dimensions based on device
            Console.WriteLine($"[SkiaGameScreen] Device.IsInitialized={Device.IsInitialized}, IsMobile={Device.IsMobile}, IsPortrait={Device.IsPortrait}");
            Console.WriteLine($"[SkiaGameScreen] Viewport: {Device.ViewportWidth}x{Device.ViewportHeight}");

            if (Device.IsInitialized && Device.IsMobile && Device.IsPortrait)
            {
                // Mobile portrait: use full viewport for highway (touch overlay is transparent)
                _canvasWidth = Device.ViewportWidth;
                _canvasHeight = Device.ViewportHeight;
                Console.WriteLine($"[SkiaGameScreen] Using PORTRAIT mode: {_canvasWidth}x{_canvasHeight}");
            }
            else
            {
                // Desktop/landscape: standard 16:9
                _canvasWidth = 1280;
                _canvasHeight = 720;
                Console.WriteLine($"[SkiaGameScreen] Using LANDSCAPE mode: {_canvasWidth}x{_canvasHeight}");
            }

            // Initialize the engine with canvas dimensions
            Console.WriteLine($"[SkiaGameScreen] Calling Engine.Initialize({_canvasWidth}, {_canvasHeight})");
            Engine.Initialize(_canvasWidth, _canvasHeight);

            // Calculate lane boundaries for touch detection
            if (_isMobile)
            {
                CalculateLaneBoundaries();
                await Input.SetLaneBoundariesAsync(_laneBoundaries);
                // Force re-render to update TouchControls with new boundaries
                StateHasChanged();
            }

            // Start the game loop
            await Engine.StartGameLoopAsync();

            _isInitialized = true;

            // Request initial render
            _canvasRef?.Invalidate();
        }
    }

    private void OnPaintSurface(SKPaintSurfaceEventArgs e)
    {
        var canvas = e.Surface.Canvas;
        var info = e.Info;

        // Log first render
        if (!_loggedFirstRender && _isInitialized)
        {
            _loggedFirstRender = true;
            Console.WriteLine($"[OnPaintSurface] First render - Skia info: {info.Width}x{info.Height}");
            Console.WriteLine($"[OnPaintSurface] Configured canvas: {_canvasWidth}x{_canvasHeight}");
            Console.WriteLine($"[OnPaintSurface] Engine.Projection: HighwayWidth={Engine.Projection.HighwayWidth}, HorizonY={Engine.Projection.HorizonY}, HitLineY={Engine.Projection.HitLineY}");
        }

        // Calculate delta time
        double now = DateTime.UtcNow.Ticks / TimeSpan.TicksPerMillisecond;
        double deltaMs = _lastRenderTime > 0 ? now - _lastRenderTime : 16.67;
        _lastRenderTime = now;

        // Clear canvas with dark background
        canvas.Clear(SKColor.Parse("#0a0a0f"));

        if (!_isInitialized) return;

        // Create game context and render
        using var ctx = new SkiaGameContext(canvas, info.Width, info.Height, Engine.Projection);

        // Let the engine render the frame
        Engine.RenderFrame(ctx, deltaMs);

        // Render countdown overlay if needed
        if (State.Current == GameStateType.Countdown && Engine.CountdownTime > 0)
        {
            RenderCountdown(ctx, canvas);
        }
    }

    private void RenderCountdown(IGameRenderContext ctx, SKCanvas canvas)
    {
        int countdownNumber = (int)Math.Ceiling(Engine.CountdownTime / 1000);
        if (countdownNumber <= 0) return;

        float centerX = (float)(ctx.Width / 2);
        float centerY = (float)(ctx.Height / 2);

        // Semi-transparent overlay
        using var overlayPaint = new SKPaint
        {
            Color = new SKColor(0, 0, 0, 128),
            Style = SKPaintStyle.Fill
        };
        canvas.DrawRect(0, 0, (float)ctx.Width, (float)ctx.Height, overlayPaint);

        // Countdown number
        using var textPaint = new SKPaint
        {
            Color = SKColor.Parse("#FFD700"),
            IsAntialias = true,
            Style = SKPaintStyle.Fill
        };
        using var font = new SKFont(SKTypeface.Default, 120);

        // Measure text to center it
        var text = countdownNumber.ToString();
        float textWidth = font.MeasureText(text, textPaint);

        canvas.DrawText(text, centerX - textWidth / 2, centerY + 40, font, textPaint);
    }

    private async Task ResumeGame()
    {
        await Engine.ResumeGame();
    }

    private async Task RestartGame()
    {
        await Engine.RestartSong();
    }

    private async Task QuitGame()
    {
        await Engine.QuitToMenu();
    }

    /// <summary>
    /// Calculate lane boundaries from the projection for touch detection.
    /// Game always uses 5-lane layout, lanes are 0.4 wide in normalized space.
    /// </summary>
    private void CalculateLaneBoundaries()
    {
        var projection = Engine.Projection;
        int laneCount = Engine.LaneCount;

        // Always use 5-lane layout (game standard), each lane is 0.4 wide
        // Lane edges at: -1.0, -0.6, -0.2, 0.2, 0.6, 1.0
        _laneBoundaries = new double[laneCount + 1];

        for (int i = 0; i <= laneCount; i++)
        {
            // Each lane is 0.4 wide, starting from -1.0
            double normalizedEdge = -1.0 + (i * 0.4);

            // Project to screen coordinates at normalizedZ = 0 (hit line)
            var (screenX, _, _) = projection.Project(normalizedEdge, 0);
            _laneBoundaries[i] = screenX;
        }

        Console.WriteLine($"[SkiaGameScreen] Lane boundaries (canvas coords): [{string.Join(", ", _laneBoundaries.Select(b => b.ToString("F0")))}]");
    }

    public async ValueTask DisposeAsync()
    {
        Engine.StateChanged -= OnEngineStateChanged;
        Engine.RenderRequested -= OnRenderRequested;

        if (_isInitialized)
        {
            await Engine.StopGameLoopAsync();
            _isInitialized = false;
        }
    }
}
