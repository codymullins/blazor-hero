@using System.Linq
@using SkiaSharp
@using SkiaSharp.Views.Blazor
@using BlazorHero.Client.Core
@using BlazorHero.Client.Rendering
@using BlazorHero.Client.Services
@inject SkiaGameEngine Engine
@inject GameState State
@inject InputService Input
@inject DeviceService Device
@implements IAsyncDisposable

<div class="game-screen @(_isMobile ? "mobile" : "")">
    <div class="game-container">
        <SKCanvasView @ref="_canvasRef"
                      OnPaintSurface="OnPaintSurface"
                      IgnorePixelScaling="true" />
    </div>

    <div class="hud">
        <div class="hud-left">
            <div class="score-display">
                <span class="score-label">SCORE</span>
                <span class="score-value">@Engine.Score.ToString("N0")</span>
            </div>
        </div>

        <div class="hud-center">
            @if (Engine.CurrentSongMeta != null)
            {
                <div class="song-info">
                    <span class="song-title">@Engine.CurrentSongMeta.Title</span>
                    <span class="song-artist">@Engine.CurrentSongMeta.Artist</span>
                </div>
            }
        </div>

        <div class="hud-right">
            <div class="combo-display @(Engine.Combo >= 10 ? "hot" : "") @(Engine.IsStarPowerActive ? "protected" : "")">
                <span class="combo-value">@Engine.Combo</span>
                <span class="combo-label">COMBO @(Engine.IsStarPowerActive ? "(SHIELDED)" : "")</span>
            </div>
            <div class="multiplier-display @(Engine.IsStarPowerActive ? "star-boosted" : "")">
                <span class="multiplier-value">@Engine.Multiplier</span>
                <span class="multiplier-x">X</span>
            </div>
        </div>
    </div>

    <div class="star-power-container @(Engine.IsStarPowerActive ? "active" : "")">
        <div class="star-power-bar">
            <div class="star-power-fill @(Engine.IsStarPowerActive ? "active" : "")"
                 style="width: @(Engine.StarPowerMeter * 100)%"></div>
        </div>
        @if (Engine.IsStarPowerActive)
        {
            <span class="star-power-active-label">2X MULTIPLIER + COMBO SHIELD</span>
        }
        else if (Engine.StarPowerMeter >= 0.5)
        {
            <span class="star-power-ready">PRESS SPACE!</span>
        }
    </div>

    @if (State.Current == GameStateType.Paused)
    {
        <div class="pause-menu">
            <h2>PAUSED</h2>
            <div class="pause-options">
                <button @onclick="ResumeGame">Resume</button>
                <button @onclick="RestartGame">Restart</button>
                <button @onclick="QuitGame">Quit</button>
            </div>
        </div>
    }

    @* Touch controls overlay for mobile *@
    @if (_isMobile)
    {
        <TouchControls
            LaneCount="@Engine.LaneCount"
            LaneBoundaries="@_laneBoundaries"
            ShowStarPower="true"
            StarPowerReady="@(Engine.StarPowerMeter >= 0.5 && !Engine.IsStarPowerActive)"
            StarPowerActive="@Engine.IsStarPowerActive" />
    }
</div>

